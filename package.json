{
  "name": "mocha-expect-snapshot",
  "version": "7.0.0",
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "bugs": "https://github.com/mshima/mocha-expect-snapshot/issues",
  "keywords": [
    "mocha",
    "expect",
    "snapshot",
    "jest-snapshot",
    "test",
    "jest",
    "jest-image-snapshot"
  ],
  "files": [
    "dist",
    "global.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/mshima/mocha-expect-snapshot.git"
  },
  "scripts": {
    "build": "tsup",
    "prepare": "npm run build",
    "pretest": "prettier --check . && eslint . && npm run build",
    "test": "npm run mocha:serial && npm run mocha:parallel",
    "mocha:parallel": "nyc --reporter=text mocha --parallel",
    "mocha:serial": "mocha --no-parallel",
    "update": "UPDATE_TEST_SNAPSHOT=true mocha && UPDATE_EXPECTED_SNAPSHOT=true mocha",
    "fix": "prettier --write . && eslint . --fix"
  },
  "peerDependencies": {
    "mocha": "^10.7.3"
  },
  "dependencies": {
    "@vitest/expect": "^2.1.3",
    "@vitest/snapshot": "^2.1.3",
    "picocolors": "^1.1.1"
  },
  "engines": {
    "node": ">=18.19.0 || >=20.6.0"
  },
  "devDependencies": {
    "@node-loaders/esbuild": "^2.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^18.19.55",
    "@yeoman/eslint": "^0.2.0",
    "eslint": "^9.12.0",
    "mocha": "^10.7.3",
    "nyc": "^17.1.0",
    "prettier": "^2.3.3",
    "tsup": "^8.3.0",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.9.0"
  }
}
